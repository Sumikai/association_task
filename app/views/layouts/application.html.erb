<!DOCTYPE html>
<html>
  <head>
    <title>RailsTask02</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default navbar-static-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
              <span class="sr-only">Plog</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
              <a class="navbar-brand" href="/blogs/top">HOME</a>
          </div>
            <div id="gnavi" class="collapse navbar-collapse">
              <ul class="nav navbar-nav">
                <li><a href="/blogs">記事</a></li>
                <li><a href="/blogs/new">新規投稿</a></li> 
              </ul>
            </div>

            <% if logged_in? %>
              <%= link_to "List", blogs_path, :class => 'btn btn-xs btn-info' %>
              <%= link_to "Logout", session_path(current_user.id), method: :delete, :class => 'btn btn-xs btn-danger' %>
            <% else %>
              <%= link_to "Sign up", new_user_path, :class => 'btn btn-xs btn-success' %>
              <%= link_to "Login", new_session_path, :class => 'btn btn-xs btn-primary' %>
            <% end %>
        </div>
      </nav>
    </header>
    
    <%= yield %>
    
    <footer>
      <div class="footer_content">
        <p>Testページ</p>
        <p>© 2018 Copyright HASHIMOTO Jun.</p>
      </div>
    </footer>
  </body>
</html>