<h1>ブログ一覧</h1>

<p><%= notice %></p>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容　　</th>
    <th>　　　　　　</th>
    <th>　　　</th>
    <th>　　　</th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細の確認', blog_path(blog.id) %></td>
    <td><%= link_to "編集", edit_blog_path(blog.id) %></td>
    <td><%= link_to '削除', blog_path(blog.id), method: :delete, data: { confirm: '消していいですか？' } %></td>
  </tr>
<% end %>
</table>

<p><%= link_to '新しくブログを投稿する', new_blog_path %></p>
